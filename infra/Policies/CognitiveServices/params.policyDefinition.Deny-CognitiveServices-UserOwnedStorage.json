{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-CognitiveServices-UserOwnedStorage"
        },
        "policyDescription": {
            "value": "Enforces user owned storage for cognitive services."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.CognitiveServices/accounts"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.CognitiveServices/accounts/userOwnedStorage",
                                    "exists": false
                                },
                                {
                                    "count": {
                                        "field": "Microsoft.CognitiveServices/accounts/userOwnedStorage[*]"
                                    },
                                    "lessOrEquals": 0
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Cognitive Services",
                "preview": false,
                "deprecated": false
            }
        }
    }
}