{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-DataFactory-LinkedServicesConnectVia"
        },
        "policyDescription": {
            "value": "Denies use of autoresolve integration runtime for connecting to linked services."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.DataFactory/factories/linkedservices"
                        },
                        {
                            "field": "Microsoft.DataFactory/factories/linkedservices/connectVia.referenceName",
                            "equals": "AutoResolveIntegrationRuntime"
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Data Factory",
                "preview": false,
                "deprecated": false
            }
        }
    }
}