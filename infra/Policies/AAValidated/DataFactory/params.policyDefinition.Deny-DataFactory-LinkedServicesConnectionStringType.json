{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-DataFactory-LinkedServicesConnectionStringType"
        },
        "policyDescription": {
            "value": "Denies non Key Vault stored screts for linked services."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.DataFactory/factories/linkedservices"
                        },
                        {
                            "field": "Microsoft.DataFactory/factories/linkedservices/typeProperties.connectionString.type",
                            "notEquals": "AzureKeyVaultSecret"
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Data Factory",
                "preview": false,
                "deprecated": false
            }
        }
    }
}