{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-KeyVault-SoftDelete"
        },
        "policyDescription": {
            "value": "Enforces soft delete with minimum number of retention days for key vault."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.KeyVault/vaults"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.KeyVault/vaults/enableSoftDelete",
                                    "notEquals": true
                                },
                                {
                                    "field": "Microsoft.KeyVault/vaults/softDeleteRetentionInDays",
                                    "less": 7
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Key Vault",
                "preview": false,
                "deprecated": false
            }
        }
    }
}