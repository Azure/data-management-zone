{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-EventHub-Sku"
        },
        "policyDescription": {
            "value": "Denies certain Skus for event hubs."
        },
        "policyMode": {
            "value": "Indexed"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled",
                        "Deny"
                    ],
                    "defaultValue": "Deny"
                },
                "allowedSkuNames": {
                    "type": "Array",
                    "metadata": {
                        "displayName": "Allowed SKU Names",
                        "description": "Specifies the allowed sku names"
                    },
                    "defaultValue": [
                        "Standard"
                    ]
                },
                "allowedSkuTiers": {
                    "type": "Array",
                    "metadata": {
                        "displayName": "Allowed SKU Tiers",
                        "description": "Specifies the allowed sku tiers"
                    },
                    "defaultValue": [
                        "Standard"
                    ]
                },
                "maxSkuCapacity": {
                    "type": "Int",
                    "metadata": {
                        "displayName": "Maximum SKU Capacity",
                        "description": "Specifies the maximum sku capacity"
                    },
                    "defaultValue": 20
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.EventHub/namespaces"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.EventHub/namespaces/sku.name",
                                    "notIn": "[parameters('allowedSkuNames')]"
                                },
                                {
                                    "field": "Microsoft.EventHub/namespaces/sku.capacity",
                                    "greater": "[parameters('maxSkuCapacity')]"
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Event Hub",
                "preview": false,
                "deprecated": false
            }
        }
    }
}