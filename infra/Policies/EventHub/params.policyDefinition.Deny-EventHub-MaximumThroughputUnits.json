{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-EventHub-MaximumThroughputUnits"
        },
        "policyDescription": {
            "value": "Denies public network access for my sql servers."
        },
        "policyMode": {
            "value": "Indexed"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled",
                        "Deny"
                    ],
                    "defaultValue": "Deny"
                },
                "maxThroughputUnits": {
                    "type": "Int",
                    "metadata": {
                        "displayName": "Maximum Throughput Units",
                        "description": "Specifies the maximum throughput units"
                    },
                    "defaultValue": 20
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.EventHub/namespaces"
                        },
                        {
                            "field": "Microsoft.EventHub/namespaces/isAutoInflateEnabled",
                            "equals": true
                        },
                        {
                            "field": "Microsoft.EventHub/namespaces/maximumThroughputUnits",
                            "exists": true
                        },
                        {
                            "field": "Microsoft.EventHub/namespaces/maximumThroughputUnits",
                            "greater": "[parameters('maxThroughputUnits')]"
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Event Hub",
                "preview": false,
                "deprecated": false
            }
        }
    }
}