{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-VirtualNetworkSubnet-RouteTable"
        },
        "policyDescription": {
            "value": "Enforces network security group on every subnet."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Network/virtualNetworks/subnets"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.Network/virtualNetworks/subnets/routeTable.id",
                                    "exists": false
                                },
                                {
                                    "value": "[empty(field('Microsoft.Network/virtualNetworks/subnets/routeTable.id'))]",
                                    "exists": true
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Network",
                "preview": false,
                "deprecated": false
            }
        }
    }
}