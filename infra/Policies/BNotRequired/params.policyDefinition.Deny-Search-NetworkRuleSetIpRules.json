{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-Search-NetworkRuleSetIpRules"
        },
        "policyDescription": {
            "value": "Enforces network ip rules for search."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Search/searchServices"
                        },
                        {
                            "count": {
                                "field": "Microsoft.Search/searchServices/networkRuleSet.ipRules[*]"
                            },
                            "greater": 0
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Search",
                "preview": false,
                "deprecated": false
            }
        }
    }
}