{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Append-Search-IdentityType"
        },
        "policyDescription": {
            "value": "Enforces use of system assigned identity for search."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Search/searchServices"
                        },
                        {
                            "field": "identity.type",
                            "exists": false
                        }
                    ]
                },
                "then": {
                    "effect": "Append",
                    "details": [
                        {
                            "field": "identity.type",
                            "value": "SystemAssigned"
                        }
                    ]
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Search",
                "preview": false,
                "deprecated": false
            }
        }
    }
}