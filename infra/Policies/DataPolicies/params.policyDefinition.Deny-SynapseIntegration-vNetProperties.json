{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-SynapseIntegration-vNetProperties"
        },
        "policyDescription": {
            "value": "Denies Synapse integration runtimes not connected to a vnet or with public ip's."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Synapse/workspaces/integrationRuntimes"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "[empty(field('Microsoft.Synapse/workspaces/integrationRuntimes/Managed.typeProperties.computeProperties.vNetProperties.vNetId'))]",
                                    "equals": true
                                },
                                {
                                    "field": "[empty(field('Microsoft.Synapse/workspaces/integrationRuntimes/Managed.typeProperties.computeProperties.vNetProperties.subnet'))]",
                                    "equals": true
                                },
                                {
                                    "field": "[length(field('Microsoft.Synapse/workspaces/integrationRuntimes/Managed.typeProperties.computeProperties.vNetProperties.publicIPs'))]",
                                    "greater": 0
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Synapse",
                "preview": false,
                "deprecated": false
            }
        }
    }
}