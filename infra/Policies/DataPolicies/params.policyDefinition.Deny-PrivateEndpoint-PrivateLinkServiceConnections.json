{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-PrivateEndpoint-PrivateLinkServiceConnections"
        },
        "policyDescription": {
            "value": "Deny private endpoints to resources outside of the aad tenant and subscription."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Network/privateEndpoints"
                        },
                        // {
                        //     "count": {
                        //         "field": "Microsoft.Network/privateEndpoints/manualPrivateLinkServiceConnections[*]"
                        //     },
                        //     "greater": 0
                        // },
                        {
                            "field": "[split(field('Microsoft.Network/privateEndpoints/manualPrivateLinkServiceConnections[*].privateLinkServiceId'), '/')[2]]",
                            "notEquals": "[subscription().subscriptionId]"
                        },
                        {
                            "field": "[split(field('Microsoft.Network/privateEndpoints/privateLinkServiceConnections[*].privateLinkServiceId'), '/')[2]]",
                            "notEquals": "[subscription().subscriptionId]"
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Network",
                "preview": false,
                "deprecated": false
            }
        }
    }
}