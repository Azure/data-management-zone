{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-IotHub-PublicNetworkAccess"
        },
        "policyDescription": {
            "value": "Denies public network access for iot hub."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Devices/IotHubs"
                        },
                        {
                            "field": "Microsoft.Devices/IotHubs/publicNetworkAccess",
                            "notEquals": "Disabled"
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Internet of Things",
                "preview": false,
                "deprecated": false
            }
        }
    }
}