{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Append-DataFactory-publicNetworkAccess"
        },
        "policyDescription": {
            "value": "Denies public access to data factory."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.DataFactory/factories/integrationRuntimes"
                        },
                        {
                            "field": "Microsoft.DataFactory/factories/publicNetworkAccess",
                            "notequals": "Disabled"
                        }
                    ]
                },
                "then": {
                    "effect": "Append",
                    "details": [
                        {
                            "field": "Microsoft.DataFactory/factories/publicNetworkAccess",
                            "value": "Disabled"
                        }
                    ]
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Synapse",
                "preview": false,
                "deprecated": false
            }
        }
    }
}