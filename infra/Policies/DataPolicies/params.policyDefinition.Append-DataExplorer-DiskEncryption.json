{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Append-DataExplorer-DiskEncryption" 
        },
        "policyDescription": {
            "value": "Enforces use of disk encryption for data explorer."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Kusto/clusters"
                        },
                        {
                            "field": "Microsoft.Kusto/clusters/enableDiskEncryption",
                            "notEquals": true
                        }
                    ]
                },
                "then": {
                    "effect": "Append",
                    "details": [
                        {
                            "field": "Microsoft.Kusto/clusters/enableDiskEncryption",
                            "notEquals": true
                        }
                    ]
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Azure Data Explorer",
                "preview": false,
                "deprecated": false
            }
        }
    }
}