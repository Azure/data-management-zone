{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deploy-Synapse-GrantSqlControlToManagedIdentity"
        },
        "policyDescription": {
            "value": "When a Synapse Workspace is created without managed virtual network then this will add it."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "field": "type",
                    "equals": "Microsoft.Synapse/workspaces/sqlPools"
                },
                "then": {
                    "effect": "deployIfNotExists",
                    "details": {
                        "type": "Microsoft.Synapse/workspaces/managedIdentitySqlControlSettings",
                        "existenceCondition": {
                            "allOf": [
                                {
                                    "field": "Microsoft.Synapse/workspaces/managedIdentitySqlControlSettings/grantSqlControlToManagedIdentity.desiredState",
                                    "equals": "Enabled"
                                },
                                {
                                    "field": "Microsoft.Synapse/workspaces/managedIdentitySqlControlSettings/grantSqlControlToManagedIdentity.actualState",
                                    "equals": "Enabled"
                                }
                            ]
                        },
                        "name": "setByPolicy",
                        "roleDefinitionIds": [
                            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                        ],
                        "deployment": {
                            "properties": {
                                "mode": "incremental",
                                "template": {
                                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {
                                        "location": {
                                            "type": "string"
                                        },
                                        "synapseWorkspaceName": {
                                            "type": "string"
                                        },
                                        "synapseSqlPoolName": {
                                            "type": "string"
                                        }
                                    },
                                    "variables": {},
                                    "resources": [
                                        {
                                            "type": "Microsoft.Synapse/workspaces/managedIdentitySqlControlSettings",
                                            "apiVersion": "2019-06-01-preview",
                                            "name": "[concat(parameters('synapseWorkspaceName'), '/', parameters('synapseSqlPoolName'), '/default')]",
                                            "properties": {
                                                "grantSqlControlToManagedIdentity": {
                                                    "desiredState": "Enabled"
                                                }
                                            }
                                        }
                                    ],
                                    "outputs": {}
                                },
                                "parameters": {
                                    "location": {
                                        "value": "[field('location')]"
                                    },
                                    "synapseWorkspaceName": {
                                        "value": "[first(split(field('fullname'),'/'))]"
                                    },
                                    "synapseSqlPoolName": {
                                        "value": "[field('name')]"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Synapse",
                "preview": false,
                "deprecated": false
            }
        }
    }
}