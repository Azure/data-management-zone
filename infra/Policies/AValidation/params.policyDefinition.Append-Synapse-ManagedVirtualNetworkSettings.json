{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Append-Synapse-ManagedVirtualNetworkSettings"
        },
        "policyDescription": {
            "value": "When a Synapse Workspace is created without proper managed virtual network settings then this will apply the desired settings."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Synapse/workspaces"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.Synapse/workspaces/managedVirtualNetworkSettings.preventDataExfiltration",
                                    "notEquals": true
                                },
                                {
                                    "field": "Microsoft.Synapse/workspaces/managedVirtualNetworkSettings.linkedAccessCheckOnTargetResource",
                                    "notEquals": true
                                },
                                {
                                    "field": "Microsoft.Synapse/workspaces/managedVirtualNetworkSettings.allowedAadTenantIdsForLinking[*]",
                                    "notEquals": [
                                        "[subscription().tenantId]"
                                    ]
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "Append",
                    "details": [
                        {
                            "field": "Microsoft.Synapse/workspaces/managedVirtualNetworkSettings.preventDataExfiltration",
                            "value": true
                        },
                        {
                            "field": "Microsoft.Synapse/workspaces/managedVirtualNetworkSettings.linkedAccessCheckOnTargetResource",
                            "value": true
                        },
                        {
                            "field": "Microsoft.Synapse/workspaces/managedVirtualNetworkSettings.allowedAadTenantIdsForLinking",
                            "value": [
                                "[subscription().tenantId]"
                            ]
                        }
                    ]
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Synapse",
                "preview": false,
                "deprecated": false
            }
        }
    }
}