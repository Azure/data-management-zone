{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Append-SynapseSpark-AutoScale"
        },
        "policyDescription": {
            "value": "When a Synapse Spark Pool is created without autoscale then this will add it."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Synapse/workspaces/bigDataPools"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.Synapse/workspaces/bigDataPools/autoScale.enabled",
                                    "notEquals": true
                                },
                                {
                                    "field": "Microsoft.Synapse/workspaces/bigDataPools/autoScale.maxNodeCount",
                                    "greater": 20
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "Append",
                    "details": [
                        {
                            "field": "Microsoft.Synapse/workspaces/bigDataPools/autoScale.enabled",
                            "value": true
                        },
                        {
                            "field": "Microsoft.Synapse/workspaces/bigDataPools/autoScale.maxNodeCount",
                            "value": 20
                        }
                    ]
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Synapse",
                "preview": false,
                "deprecated": false
            }
        }
    }
}