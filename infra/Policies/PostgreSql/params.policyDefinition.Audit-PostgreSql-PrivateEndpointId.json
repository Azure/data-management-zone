{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Audit-PostgreSql-PrivateEndpointId"
        },
        "policyDescription": {
            "value": "Audit public endpoints that are created in other subscriptions for postgre sql."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.DBforPostgreSQL/servers"
                        },
                        {
                            "field": "Microsoft.DBforPostgreSQL/servers/privateEndpointConnections/privateEndpoint.id",
                            "notContains": "[subscription().id]"
                        }
                    ]
                },
                "then": {
                    "effect": "Audit"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "SQL",
                "preview": false,
                "deprecated": false
            }
        }
    }
}