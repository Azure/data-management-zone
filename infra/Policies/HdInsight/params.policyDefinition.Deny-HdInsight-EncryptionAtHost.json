{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-HdInsight-EncryptionAtHost"
        },
        "policyDescription": {
            "value": "Enforce encryption at host for hd insight clusters."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {}
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.HDInsight/clusters"
                        },
                        {
                            "field": "Microsoft.HDInsight/clusters/diskEncryptionProperties.encryptionAtHost",
                            "notEquals": true
                        }
                    ]
                },
                "then": {
                    "effect": "Deny"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "HD Insight",
                "preview": false,
                "deprecated": false
            }
        }
    }
}