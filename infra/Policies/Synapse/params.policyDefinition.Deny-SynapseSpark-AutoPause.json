{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-SynapseSpark-AutoPause"
        },
        "policyDescription": {
            "value": "Enforces autopause for Synapse Spark Pools."
        },
        "policyMode": {
            "value": "Indexed"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled",
                        "Deny"
                    ],
                    "defaultValue": "Deny"
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Synapse/workspaces/bigDataPools"
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "Microsoft.Synapse/workspaces/bigDataPools/autoPause.enabled",
                                    "notEquals": true
                                },
                                {
                                    "field": "Microsoft.Synapse/workspaces/bigDataPools/autoPause.delayInMinutes",
                                    "greater": 60
                                }
                            ]
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Synapse",
                "preview": false,
                "deprecated": false
            }
        }
    }
}