{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-DataFactory-LinkedServicesConnectionStringType"
        },
        "policyDescription": {
            "value": "Denies non Key Vault stored screts for linked services."
        },
        "policyMode": {
            "value": "All"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled",
                        "Deny"
                    ],
                    "defaultValue": "Audit"
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.DataFactory/factories/linkedservices"
                        },
                        {
                            "field": "Microsoft.DataFactory/factories/linkedservices/type",
                            "notIn": [
                                "AzureSqlDatabase",
                                "AzureSqlMI",
                                "AzureSqlDW",
                                "AzureBlobFS",
                                "AdlsGen2CosmosStructuredStream",
                                "AzureDataLakeStore",
                                "AzureDataLakeStoreCosmosStructuredStream",
                                "AzureBlobStorage",
                                "AzureDatabricks"
                            ]
                        },
                        {
                            "field": "Microsoft.DataFactory/factories/linkedservices/typeProperties.connectionString.type",
                            "notEquals": "AzureKeyVaultSecret"
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Data Factory",
                "preview": false,
                "deprecated": false
            }
        }
    }
}