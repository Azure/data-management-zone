{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-Sql-MinimalTlsVersion"
        },
        "policyDescription": {
            "value": "Enforces tls versions for sql servers."
        },
        "policyMode": {
            "value": "Indexed"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled",
                        "Deny"
                    ],
                    "defaultValue": "Deny"
                },
                "tlsVersions": {
                    "type": "Array",
                    "metadata": {
                        "displayName": "TLS Versions",
                        "description": "Specifies the TLS versions that should be enforced"
                    },
                    "defaultValue": [
                        "1.2"
                    ]
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Sql/servers"
                        },
                        {
                            "field": "Microsoft.Sql/servers/minimalTlsVersion",
                            "notIn": "[parameters('tlsVersions')]"
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "SQL",
                "preview": false,
                "deprecated": false
            }
        }
    }
}