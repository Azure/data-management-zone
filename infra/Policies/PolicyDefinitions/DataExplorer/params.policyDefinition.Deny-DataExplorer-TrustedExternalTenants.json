{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Deny-DataExplorer-TrustedExternalTenants"
        },
        "policyDescription": {
            "value": "Denies external tenants for data explorer."
        },
        "policyMode": {
            "value": "Indexed"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled",
                        "Deny"
                    ],
                    "defaultValue": "Deny"
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Kusto/clusters"
                        },
                        {
                            "count": {
                                "field": "Microsoft.Kusto/clusters/trustedExternalTenants[*]",
                                "where": {
                                    "field": "Microsoft.Kusto/clusters/trustedExternalTenants[*].value",
                                    "notEquals": "[subscription().tenantId]"
                                }
                            },
                            "greater": 0
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Azure Data Explorer",
                "preview": false,
                "deprecated": false
            }
        }
    }
}