{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "value": "Audit-IotHub-PrivateEndpointId"
        },
        "policyDescription": {
            "value": "Audit public endpoints that are created in other subscriptions for iot hubs."
        },
        "policyMode": {
            "value": "Indexed"
        },
        "policyParameters": {
            "value": {
                "effect": {
                    "type": "String",
                    "metadata": {
                        "displayName": "Effect",
                        "description": "Enable or disable the execution of the policy"
                    },
                    "allowedValues": [
                        "Audit",
                        "Disabled"
                    ],
                    "defaultValue": "Audit"
                }
            }
        },
        "policyDefinition": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Devices/IotHubs"
                        },
                        {
                            "count": {
                                "field": "Microsoft.Devices/IotHubs/privateEndpointConnections[*]",
                                "where": {
                                    "field": "Microsoft.Devices/IotHubs/privateEndpointConnections[*].privateEndpoint.id",
                                    "notContains": "[subscription().id]"
                                }
                            },
                            "greaterOrEquals": 1
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "policyMetadata": {
            "value": {
                "version": "1.0.0",
                "category": "Internet of Things",
                "preview": false,
                "deprecated": false
            }
        }
    }
}